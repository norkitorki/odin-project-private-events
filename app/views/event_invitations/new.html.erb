<h2 class="heading bold align-self-center">Invite users for <%= @event.name %></h2>

<%= form_with model: @invitation do |f| %>
  <div class="field">
    <%= f.label :name_or_email, 'Username or email address' %>
    <%= f.text_field :name_or_email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Invite' %>
  </div>
<% end %>

<%= link_to 'Show invited users', event_invitations_path(@event), class: 'small bold align-self-center' %>
