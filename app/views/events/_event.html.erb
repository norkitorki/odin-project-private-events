<div class="event flex column gap-10">
  <%= link_to event do %>
    <%= image_tag "https://source.unsplash.com/random/400x120?v=#{event.id}", width: '400px', height: '120px' %>
  <% end %>

  <div class="flex column gap-10 pad-10">
    <p><%= link_to event.name, event, class: 'bold' %><p>
    
    <div class="flex gap-5">
      <svg style="width:18px;height:18px" viewBox="0 0 24 24">
        <path fill="currentColor" d="M9,10H7V12H9V10M13,10H11V12H13V10M17,10H15V12H17V10M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z" />
      </svg>
      <p class="event-date very-small"><%= event.start_date.strftime('%a, %b %e %R, %Y') %></p>
    </div>

    <div class="flex gap-5">
      <svg style="width:18px;height:18px" viewBox="0 0 24 24">
        <path fill="currentColor" d="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z" />
      </svg>
      <p class="event-location very-small"><%= event.location %></p>
    </div>

    <div class="flex gap-5">
      <svg style="width:18px;height:18px" viewBox="0 0 24 24">
        <path fill="currentColor" d="M12,19.2C9.5,19.2 7.29,17.92 6,16C6.03,14 10,12.9 12,12.9C14,12.9 17.97,14 18,16C16.71,17.92 14.5,19.2 12,19.2M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z" />
      </svg>
      <%= link_to event.host.username, user_path(event.host), class: 'event-author very-small bold' %>
    </div>
  </div>
</div>
