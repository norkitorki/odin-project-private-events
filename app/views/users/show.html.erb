<div class="user-card pad-10 flex column gap-10 align-center align-self-center">
  <%= image_tag "https://source.unsplash.com/random/100x100?v=#{@user.id}", size: '100x100', style: 'border-radius: 50%;border:1px solid white;' %>
  <h2 class="heading bold"><%= @user.username %></h2>
</div>

<h3 class="heading bold">Hosted Events (<%= @user.events.size %>)</h3>
<div class="events">
  <% @user.events.each do |event| %>
    <%= render 'events/event', event: event %>
  <% end %>
</div>

<h3 class="heading bold">Visited Events (<%= @user.visits.size %>)</h3>
<div class="events">
  <% @user.visits.each do |event| %>
    <%= render 'events/event', event: event %>
  <% end %>
</div>
